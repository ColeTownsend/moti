{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "moti$": ["../../packages/moti/src"],
      "moti/svg": ["../../packages/moti/src/svg"]
    },
    "jsx": "react-native",
    "target": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "extends": "expo/tsconfig.base"
}
